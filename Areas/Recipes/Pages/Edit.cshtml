@page
@model MealsPlanning.Areas.Recipes.Pages.EditModel
@using MealsPlanning.Models;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fruit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
<div class="form-group">
                <label asp-for="@Model.Recipe.Name" class="control-label"></label>
                <input asp-for="@Model.Recipe.Name" class="form-control" />
                <span asp-validation-for="@Model.Recipe.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Recipe.Instructions" class="control-label"></label>
                <input asp-for="@Model.Recipe.Instructions" class="form-control" />
                <span asp-validation-for="@Model.Recipe.Instructions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Recipe.Level" class="control-label"></label>
                <select name="pets" id="pet-select">
                    @foreach (var item in Enum.GetValues(typeof(MealsPlanning.Models.Recipe.Levels)))
                    {
                        <option value="@item">@item</option>
                    }
                    <option value="@Model.Recipe.Level">@Model.Recipe.Level</option>
                    <option value="1">Facile</option>
                    <option value="2">Moyen</option>
                    <option value="3">Difficile</option>
                </select>
                <span asp-validation-for="@Model.Recipe.Level" class="text-danger"></span>
            </div>

            @* <div class="form-group">
                <label asp-for="@Model.Recipe.RecipeIngredient" class="control-label">Ingredients</label>
                <select name="pets" id="pet-select">
                    <option value="">--Choisissez une option--</option>
                    <option value="1">Facile</option>
                    <option value="2">Moyen</option>
                    <option value="3">Difficile</option>
                </select>
                <span asp-validation-for="@Model.Recipe.RecipeIngredient" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label asp-for="@Model.Recipe.NbMeals" class="control-label"></label>
                <input type="number" id="tentacles" asp-for="@Model.Recipe.NbMeals" min="1" max="10" />
                <span asp-validation-for="@Model.Recipe.NbMeals" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

